{{wrap with="layout.phtml"}}
  {{into slot="js_include"}}
    <script src="/lib/Importer.js"></script>
  {{/into}}
  {{into slot="js_ready"}}
    var Instagram = new Importer('instagram');
    $('#import_instagram').click(function() {
      if(!Instagram.isConnected()) {
        Instagram.loginDirect($(this).attr('href'));
        return false;
      }
    });

    var Flickr = new Importer('flickr');
    $('#import_flickr').click(function() {
      if(!Flickr.isConnected()) {
        Flickr.loginDirect($(this).attr('href'));
        return false;
      }
    });

    var Facebook = new Importer('facebook');
    $('#import_facebook').click(function() {
      if(!Facebook.isConnected()) {
        Facebook.loginDirect($(this).attr('href'));
        return false;
      }
    });

    $('#day_create').click(function() {
      API.post('days/start', {title:'My day', type:'Working day'}).success(function(resp) {
        window.location.href= '/pages/'+resp.data.result.id+'/day';
      }).send();
    });
  {{/into}}
  {{into slot="content"}}
    <div class="hero-unit">
      <h1>Import days from&hellip;</h1>
      <div class="text-center" style="padding-top: 50px;">
	      <a class="btn btn-large btn-main" id="import_social" href="/pages/import#import">
		      <i class="icon icon-large icon-cloud-download"></i>
		      Facebook + Instagram + Flickr
	      </a>
      </div>
      <h1>or &hellip;</h1>
      <div class="text-center" style="padding-top: 50px;">
        <a class="btn btn-large btn-main" id="day_create">
          <i class="icon icon-large icon-edit"></i>
          Create day from scratch
        </a>
      </div>
    </div>
  {{/into}}
{{/wrap}}
