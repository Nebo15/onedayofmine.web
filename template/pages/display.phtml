{{wrap with="layout.phtml"}}
{{into slot="css"}}
.followers-list li {
  float:left;
  margin-right:3px;
}
.followers-list li img {
	width:72px;
	height:72px;
}

.comment-item img {
  margin:0px;
}

{{/into}}
{{into slot="content"}}
<div class="row">
		<div class="span8">
				<h3>News</h3>
        <div class="comments">
            <span class="pull-right not-decorated with-shadow"></span>
            <ul class="unstyled">
            {{list using="$#news"}}
	              {{list:item}}
		                <li class="comment-item">
		                    <img src="{$item.sender.image_72}" width="72" class="pull-left img-rounded" alt="" />
		                    <div class="bubble left">
		                        <p class="text">
		                            {$item.text|raw}
		                            <br />
			                          {{list using="{$item.days}" as="$day"}}
				                            {{list:item}}
                                        <a href="/pages/{$day.id}/day">
                                            <img src="{$day.image_266}" width="72">
	                                      </a>
                                    {{/list:item}}
                                {{/list}}
		                            {{list using="{$item.moments}" as="$moment"}}
		                                {{list:item}}
		                                    <a href="/pages/{$item.day.id}/day">
				                                    <img src="{$moment.image_266}" width="72">
		                                    </a>
		                                {{/list:item}}
		                            {{/list}}
		                            {{list using="{$item.day_comments}" as="$comment"}}
		                                {{list:item}}
			                                  <blockquote>{$comment.text}</blockquote>
		                                {{/list:item}}
		                            {{/list}}
		                            {{list using="{$item.moment_comments}" as="$comment"}}
				                            {{list:item}}
				                                <blockquote>{$comment.text}</blockquote>
				                            {{/list:item}}
		                            {{/list}}
		                            <small><b>{$item.time|date:'M j \a\t g:m a'}</b></small>
		                        </p>
		                    </div>
		                </li>
                {{/list:item}}
            {{/list}}
            </ul>
        </div>
		</div>
		<div class="span4">
				<div class="span4">
						<h5>Following&nbsp;&nbsp;<small>{$#current_user.following_count}</small></h5>
						{{list using="{$#following}"}}
                <ul class="unstyled  followers-list">
								{{list:item}}
                    <li><a href="/pages/{$item.id}/user">
		                    <img src="{$item.image_72}"/>
                    </a></li>
		            {{/list:item}}
                </ul>
								{{list:empty}}
                    <p>You have no following users. But you can <a href="/pages/find_people">find</a> em!</p>
								{{/list:empty}}
						{{/list}}
				</div>
        <div class="span4">
		        <h5>Followers&nbsp;&nbsp;<small>{$#current_user.followers_count}</small></h5>
            {{list using="{$#followers}"}}
		            <ul class="unstyled  followers-list">
		                {{list:item}}
		                <li><a href="/pages/{$item.id}/user">
		                    <img src="{$item.image_72}"/>
		                </a></li>
		                {{/list:item}}
		            </ul>
		            {{list:empty}}
                    <p>You have no followers. But you can <a href="/pages/find_people">find</a> em!</p>
		            {{/list:empty}}
            {{/list}}
        </div>
		</div>
</div>
<script>
    $('.tool').tooltip();
</script>
{{/into}}
{{/wrap}}
