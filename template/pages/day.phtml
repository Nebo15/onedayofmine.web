<? $this->title = $this->day->title; ?>
{{wrap with="layout.phtml"}}
  {{into slot="og_meta"}}
    <meta property="og:type" content="{$#facebook_app_namespace}:day" />
    <meta property="og:url" content="{$#host_url}pages/{$#day.id}/day" />
    <meta property="og:title" content="{$#day.title}" />
    <meta property="{$#facebook_app_namespace}:location" content="{$#day.location}" />
    <meta property="{$#facebook_app_namespace}:type" content="some type" />
  {{/into}}
  {{into slot="content"}}
    <div class="row-fluid">
        <div class="span6 offset3">
            <h2>{$#day->title}</h2>
            <p class="muted">{$#day->type} by <b><a href="/pages/{$#day->user->id}/user">{$#day->user->name}</a></b></p>

		        <? $is_favorite = (property_exists($this->day, 'is_favorite')) ? $this->day->is_favorite : false; ?>
            <ul class="inline day-bages">
              <li><i class="icon icon-large icon-calendar"></i> {$#day->utime}</li>
              <li><i class="icon icon-large icon-heart"></i> {$#day->likes_count}</li>
              <li><i class="icon icon-large icon-comments"></i> {$#day->comments_count}</li>
              <li><i class="icon icon-large icon-bookmark<?= $is_favorite ? '' : '-empty'; ?>"></i></li>
            </ul>


            <br class="clearfix" />

            {{list using="$#day->moments"}}
                <ul class="unstyled">
                    {{list:item}}
                    <li class="well">
        		            <div>
                            <div class="pull-left">
        		                    <? if($this->is_owner) { ?>
                                    <a href="#" class="btn"><i class="icon-large icon-pencil"></i></a>
                                    <a href="#" class="btn"><i class="icon-large icon-trash"></i></a>
        		                    <? } ?>
                            </div>
        				            <div class="pull-left with-shadow" style="text-align: center">{$item->time}</div>
                            <div class="pull-right with-shadow">
        		                    <? if(!$item->is_liked) { ?>
        	                          <a href="#" class="btn"><i class="icon-large icon-heart">{$item->likes_count}</i></a>
        		                    <? } else { ?>
        	                          <a href="#" class="btn"><i class="icon-large icon-heart-empty">{$item->likes_count}</i></a>
        		                    <? } ?>
                                <a href="#" class="btn"><i class="icon-large icon-share"></i></a>
                            </div>
                            <br class="clearFix"/>
        		            </div>
                        <br class="clearFix"/>

        								<div><center>
                            <img src="{$item->image_532}" width="400" height="400" class="img-polaroid" alt="">
                        </center></div>
                        <p style="padding-top:10px">{$item->description|nl2br}</p>

                        <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                <h3 id="myModalLabel">Modal header</h3>
                            </div>
                            <div class="modal-body">
                                <p>One fine body…</p>
                            </div>
                            <div class="modal-footer">
                                <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                                <button class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                    </li>
                    {{/list:item}}
                </ul>
            {{/list}}

            <p>{$#day->final_description|default:"no description"|nl2br}</p>
    	      <hr/>

            <h3>Comments:</h3>
            <textarea rows="3" class="input-block-level"></textarea>
            <button class="btn btn-large btn-block btn-primary" type="button">Send a comment</button>
        </div>
    </div>
  {{/into}}
{{/wrap}}
