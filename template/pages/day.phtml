<? $this->title = $this->day->title; ?>
{{wrap with="layout.phtml"}}
  {{into slot="og_meta"}}
    <meta property="og:type" content="{$#facebook_app_namespace}:day" />
    <meta property="og:url" content="{$#host_url}pages/{$#day.id}/day" />
    <meta property="og:title" content="{$#day.title}" />
    <meta property="{$#facebook_app_namespace}:location" content="{$#day.location}" />
    <meta property="{$#facebook_app_namespace}:type" content="{$#day->type}" />
  {{/into}}
  {{into slot="js_include"}}
    <script src="/lib/vendor/bootstrap-timepicker.min.js"></script>
    <script src="/lib/vendor/bootstrap-fileupload.js"></script>
  {{/into}}
  {{into slot="css_include"}}
    <link href="/styles/bootstrap-timepicker.min.css" rel="stylesheet">
    <link href="/styles/jasny-bootstrap.css" rel="stylesheet">
  {{/into}}
  {{into slot="js_ready"}}
    $('input.input-timepicker').timepicker({
        minuteStep: 1,
        showMeridian: false
    });
  {{/into}}
  {{into slot="content"}}
      <div class="row-fluid">
          <div class="span6 offset3">
              <? if($this->is_owner) { ?>
                <span class="pull-right" style="margin-top: 35px;">
                  <a class="not-decorated with-shadow"><i class="icon-pencil"></i></a>
                  <a class="not-decorated with-shadow"><i class="icon-trash"></i></a>
                </span>
              <? } ?>
              <h2>{$#day->title}</h2>
              <p class="muted">
                <span class="pull-right">
                  <i class="icon icon-calendar"></i> {$#day->utime}
                </span>
                {$#day->type} by <b><a href="/pages/{$#day->user->id}/user">{$#day->user->name}</a></b>
                <!-- @ {$#day.location} -->
              </p>

              {{list using="$#day->moments"}}
                  <ul class="unstyled">
                      {{list:item}}
                      <li class="well moment-item">
                          <span class="moment-controls-overlay">
                            <? if($this->is_owner) { ?>
                              <a class="not-decorated with-shadow"><i class="icon-pencil"></i></a>
                              <a class="not-decorated with-shadow"><i class="icon-trash"></i></a>
                            <? } ?>
                            <!-- <a class="btn btn-link with-shadow"><i class="icon-share"></i></a> -->
                          </span>

                          <!-- <div class="input-append bootstrap-timepicker">
                              <input type="text" class="input-small input-timepicker" value="{$item->time}" />
                              <span class="add-on"><i class="icon-time"></i></span>
                          </div> -->
                          <div id="moment-time" class="text-centered with-shadow" style="text-align: center">
                            <i class="icon-time"></i>{$item->time}
                          </div>

                          <div class="moment-image-holder">
                            <img src="{$item->image_532}" width="400" class="img-polaroid" alt="" />
                            <!-- <span class="moment-image-overlay overlay-like">
                              <i class="icon-heart<?= $item->is_liked ? '' : '-empty'; ?>"></i> {$item->likes_count}
                            </span> -->
                          </div>

                          <br class="clearfix" />

                          <? if($item->description || $this->is_owner) { ?>
                            <p class="bubble moment-description">
                              {$item->description|nl2br}
                            </p>
                          <? } ?>
                      </li>
                      <? if($this->is_owner) { ?>
                        <li class="well moment-item-placeholder">
                          <a class="not-decorated with-shadow" data-toggle="modal" data-target="#add_moment_modal"><i class="icon-plus-sign icon-2x"></i></a>
                        </li>
                      <? } ?>
                      {{/list:item}}
                  </ul>
              {{/list}}

              <div class="bubble">
                <? if($this->is_owner) { ?>
                  <span class="pull-right">
                    <a class="not-decorated with-shadow"><i class="icon-pencil"></i></a>
                  </span>
                <? } ?>
                {$#day->final_description|default:"no description"|nl2br}

                <? if($this->is_owner) { ?>
                <div<? if($this->day->final_description) { ?> class="hidden"<? } ?>>
                  <textarea rows="3" class="input-block-level" placeholder="Enter final description..."></textarea>

                  <? if(!$this->day->final_description) { ?>
                    <button class="btn btn-block" type="button">Close the day</button>
                  <? } else { ?>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                    <button type="button" class="btn">Cancel</button>
                  <? } ?>
                </div>
                <? } ?>
              </div>

              <span class="pull-right">
                <ul class="unstyled inline">
                  <li>
                    <div class="input-prepend">
                      <span class="add-on add-on-small"><i class="icon icon-heart"></i> {$#day->likes_count}</span>
                      <button class="btn btn-small" type="button"> Like</button>
                    </div>
                  </li>
                  <li>
                    <div class="input-prepend">
                      <button class="btn btn-small" type="button"><i class="icon icon-share"></i> Share</button>
                    </div>
                  </li>
                </ul>
              </span>

              <div id="add_moment_modal" class="modal hide fade">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  <h3>Add moment</h3>
                </div>
                <div class="modal-body">
                  <p>
                      <h4>From your PC:</h4>
                      <div class="text-center">
                        <div class="fileupload fileupload-new" data-provides="fileupload">
                          <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;">
                            <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&text=no+image" />
                          </div>
                          <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
                          <div>
                            <span class="btn btn-file">
                              <span class="fileupload-new">Select image</span>
                              <span class="fileupload-exists">Change</span>
                              <input type="file" />
                            </span>
                            <a href="#" class="btn fileupload-exists" data-dismiss="fileupload">Remove</a>
                          </div>
                        </div>
                      </div>

                      <h4>Import from:</h4>
                      <div class="text-center">
                        <a class="btn">
                            <i class="icon icon-large icon-camera-retro"></i>
                            Instagram
                        </a>
                        <a class="btn disabled">
                            <i class="icon icon-large icon-camera"></i>
                            Flickr
                        </a>
                        <a class="btn disabled">
                            <i class="icon icon-large icon-facebook-sign"></i>
                            Facebook
                        </a>
                      </div>
                  </p>
                </div>
                <!-- <div class="modal-footer">
                  <a href="#" class="btn">Close</a>
                  <a href="#" class="btn btn-primary">Save changes</a>
                </div> -->
              </div>

              <br class="clearfix" /><br />
              <hr/>

              <span class="pull-right">
                <i class="icon icon-comments"></i> {$#day->comments_count}
              </span>

              <h4>Comments:</h4>
              {{list using="$#day->comments"}}
                <ul class="unstyled">
                    {{list:item}}
                      <li class="comment-item">
                        <img src="{$item->user->image_72}" width="72" class="pull-left" alt="" />

                        <div class="bubble left">
                          <p class="text">
                            {$item->text}
                          </p>
                        </div>

                        <br class="clearfix" />
                      </li>
                    {{/list:item}}
                </ul>
              {{/list}}
              <textarea rows="3" class="input-block-level"></textarea>
              <button class="btn btn-block" type="button">Send a comment</button>
          </div>
      </div>
  {{/into}}
{{/wrap}}
