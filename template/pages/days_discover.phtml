{{wrap with="layout.phtml"}}
{{into slot="css"}}
.days li dd .day-desc-alter {
	display:none;
}
.days li dd .day-desc {
	display:block;
}
.days li:hover dd .day-desc-alter {
	display:block;
}
.days li:hover dd .day-desc {
	display:none;
}
{{/into}}
{{into slot="content"}}
  <div class="row">
    <div class="span11">
	    <h1>I want to see a
		    <select>
			    <option>working day</option>
			    <option>day off</option>
			    <option>holiday</option>
			    <option>trip</option>
		    </select>
		    of
		    <select>
			    <option>designer</option>
			    <option>business analyst</option>
			    <option>artist</option>
			    <option>courier</option>
			    <option>plumber</option>
		    </select>
		    from
		    <select>
			    <option>New-York</option>
			    <option>Paris</option>
			    <option>Moscow</option>
			    <option>Tokio</option>
			    <option>Shanghai</option>
		    </select>
	    </h1>
			{{list using="$#days"}}
			<ul class="days">
				{{list:item}}
				<li>
					<dl class="with-box-shadow">
						<dt>
							<a href="/pages/{$item.id}/day">
								<img src="{$item.image_532|default:'/img/no_photo.png'}" alt="{$item.final_description}">
							</a>
				      <span class="day-controls-overlay-left">
							    <i class="icon icon-heart"></i> {$item.likes_count}
					    </span>
					    <span class="day-controls-overlay-right">
							    <i class="icon icon-large icon-comments"></i> {$item.comments_count}
					    </span>
						</dt>
						<dd>
							<div class="day-desc">
									{$item.user.occupation|i18n_clip:25,0,"&hellip;"} from {$item.user.location}
							</div>
							<div class="day-desc-alter">
								<a href="/pages/{$item.id}/day">
									{$item.title|i18n_clip:25,0,"&hellip;"}
								</a>
								<br/>
								<a href="/pages/{$item.user.id}/user">
									<small>{$item.user.name}</small>
								</a>
							</div>
						</dd>
					</dl>
				</li>
				{{/list:item}}
			</ul>
			{{list:default}}
			No days found
			{{/list:default}}
			{{/list}}
    </div>
  </div>
{{/into}}
{{/wrap}}
