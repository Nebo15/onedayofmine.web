{{template name='days_list'}}
		{{list using="$days"}}
				<h1>Interesting days</h1>
				<ul class="thumbnails">
				    {{list:item}}
				    <li class="span3">
				        <div class="thumbnail">
				            <a href="/pages/{$item->id}/day">
				                <img src="{$item->image_532|default:'/img/no_photo.png'}" alt="{$item->final_description}">
				                <h5>{$item->title}</h5>
                    </a>
                    <a href="/pages/{$item->user->id}/user">
						            <p>{$item->user->name}</p>
				            </a>
				        </div>
				    </li>
				    {{/list:item}}
				</ul>
				{{list:default}}
						You don't have days yet.
				{{/list:default}}
		{{/list}}
{{/template}}

{{template name='users_list'}}
		{{list using="$users"}}
		    <ul class="unstyled">
		        {{list:item}}
            <li style="background-color:#eeeeee">
                <div class="row" >
                    <div class="span1">
                        <img src="http://images.instagram.com/profiles/profile_1450621_75sq_1360187746.jpg"/>
                    </div>
                    <div class="span5">
                        <a href="">{$item.name}</a> - occupation from location
                        <small>asdasdas</small>
                        <div class="pull-right" style="height:70px;">
                            <a href="#" class="btn btn-danger" style="margin:17px 10px 0 0">Unfollow</a>
                        </div>
                    </div>
                </div>
            </li>
		        {{/list:item}}
		    </ul>
				{{list:default}}
					Empty
				{{/list:default}}
		{{/list}}
{{/template}}

<script id="users_list" type="text/x-handlebars-template">
    <ul class="unstyled">
        [[#users]]
        <li style="background-color:#eeeeee; margin-top:10px">
            <div class="row" >
                <div class="span1">
                    <img src="[[image]]"/>
                </div>
                <div class="span5">
                    <a href="">[[name]]</a>
                    <small>[[text]]</small>
                    <div class="pull-right" style="height:70px;">
                        <a href="#" class="btn [[btn_class]]" style="margin:17px 10px 0 0" [[btn_attr]]="[[btn_value]]">[[btn_text]]</a>
                    </div>
                </div>
            </div>
        </li>
        [[/users]]
    </ul>
</script>

