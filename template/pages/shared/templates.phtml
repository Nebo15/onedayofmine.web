{{template name='days_list'}}
		{{list using="$days"}}
				<ul class="thumbnails">
				    {{list:item}}
				    <li class="span3">
				        <div class="thumbnail">
				            <a href="/pages/{$item->id}/day">
				                <img src="{$item->image_532|default:'/img/no_photo.png'}" alt="{$item->final_description}">
				                <h3>{$item->title}</h3>
				            </a>
				            <p><small>{$item->final_description}</small></p>
				        </div>
				    </li>
				    {{/list:item}}
				</ul>
				{{list:default}}
						You don't have days yet.
				{{/list:default}}
		{{/list}}
{{/template}}

<script id="days_list" type="text/x-handlebars-template">
    <ul class="thumbnails">
        [[#days]]
        <li class="span3">
            <div class="thumbnail">
                <a href="/pages/[[id]]/day">
                    <img src="[[image_532]][[#unless image_532]]/img/no_photo.png[[/unless]]" alt="[[final_description]]">
                    <h3>[[title]]</h3>
                </a>
                <p><small>[[final_description]]</small></p>
            </div>
        </li>
        [[/days]]
    </ul>
</script>

